@model SalesViewModel
@{
    ViewData["Title"] = "Cashier's Console";
}

<div class="row">
    <div class="col-7">
        <h3>Cashier's Console</h3>
    </div>
    <div class="col-2">
        <label for="cashier">Cashier's Name: </label>
    </div>
    <div class="col">
        @* Name *@
    </div>
</div>

<hr />

<div class="row">
    <div class="col-4">
        <select class="form-control mt-5" asp-for="SelectedCategoryId">
            <option>- Select Category -</option>
            @foreach (var cat in @Model.Categories)
            {
                <option value="@cat.Id">@cat.Name</option>
            }
        </select>
        <div id="productsContainer" class="mt-5">
            @* * Partial View of Products *@
        </div>

        <br />

        <div>
            @* prod detail *@
        </div>

        <br />

        @* sales form *@
    </div>
    <div class="col">
        @* trans record *@
    </div>
</div>

@section Scripts
{
    <script>

        // Handle Category selection
        $(function () {
            $("#SelectedCategoryId").on("change", function () {
                $("#productsContainer").load("/products/ProductsByCategoryPartial", { categoryId: $(this).val() });
            })
        });
    </script>
}