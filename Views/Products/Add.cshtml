@model Product
@{
    ViewData["Title"] = "Add Product";
}

<div class="mt-5">
    <form method="post">
        <div class="row mb-3">
            <div class="col-2">
                <label class="col-form-label" asp-for="Name"></label>
            </div>
            <div class="col-6">
                <input class="form-control" type="text" asp-for="Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-2">
                <label class="col-form-label" asp-for="Price"></label>
            </div>
            <div class="col-6">
                <input class="form-control" type="text" asp-for="Price" />
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-2">
                <label class="col-form-label" asp-for="Quantity"></label>
            </div>
            <div class="col-6">
                <input class="form-control" type="text" asp-for="Quantity" />
                <span class="text-danger" asp-validation-for="Quantity"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-2">
                <input class="btn btn-primary" type="submit" value="Add">
            </div>
        </div>
    </form>
</div>